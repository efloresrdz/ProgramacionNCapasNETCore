@page
@model LoginModel

@{
	ViewData["Title"] = "Inicio de Session";
	Layout = null;
}
<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="ie6 ielt8"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="ie7 ielt8"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="ie8"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
<meta charset="utf-8">
<title>Paper Stack</title>
<link rel="stylesheet" type="text/css" href="~/css/estilo.css" />
</head>
<body>
<div class="container">
	<section id="content">
			<form id="account" method="post">
			<h1>Inicia Session</h1>
			  <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div>

					<input asp-for="Input.Email" type="text" placeholder="Username" required="" id="username" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div>
					<input asp-for ="Input.Password" type="password" placeholder="Password" required="" id="password" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div>
					<input id="login-submit" type="submit" value="Log in" />
					<a id="forgot-password" asp-page="./ForgotPassword">Lost your password?</a>
					<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
			</div>
		</form><!-- form -->
		
	</section><!-- content -->
</div><!-- container -->
</body>
</html>

  
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
